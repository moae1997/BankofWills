<%- include("inc/header") -%>
<div class="container">

    <% if(typeof alert != "undefined") { %>
        <% alert.forEach(function(error) { %>
<div class="alert alert-warning alert-dismissible fade show">
    <%= error %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">x</span>
    </button>
</div>
        <%})%>
    <%}%>


</div>


<div class="will_div">

<div class="navtabs">
    <a href="/logout">Log Out</a>
    <a href="/remove">Remove Account</a>
    <a href="/changePassword">Change Password</a>
</div>

<div id="showDiv">
    <div class="add_div">
        <form class="add_form" action="/will" method="post"> 
            <textarea id="mytextarea" type="text" name="myWill" cols="30" rows="10" placeholder="Type your will here..."><%-draft%></textarea>
            <button type="submit" name="savebtn" value="save">Save</button>
            <button type="submit" name="draftbtn" value="draft">Save Progress</button>
            <button id="showWill">Show my will</button>
        </form>
    </div>
</div>

<div id="addDiv" class="hide">
    <div class="show_div"> 
        <h2>The Will of <%=user%></h2>  
        <% Willlist.forEach(function(will) { %>   
                <p><%-will%></p>
        <% }); %>
        <form action="/delete" method="post">   
            <input name="check" type="checkbox" onchange="this.form.submit()">
            <label>Remove Will</label>
        </form>
        <button id="addWill">Add to Your Will</button>
    </div>
</div>

</div>

<%- include("inc/footer") -%>



