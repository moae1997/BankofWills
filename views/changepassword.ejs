<%- include("inc/header") -%>

<div class="container">

    <% if(typeof alert != "undefined") { %>
        <% alert.forEach(function(error) { %>
<div class="alert alert-warning alert-dismissible fade show">
    <%= error %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">x</span>
    </button>
</div>
        <%})%>
    <%}%>


</div>

<div class="pass_div">
    <div class="change_div">
        <form class="pass_form" action="/passwordchange" method="post">
            <label>Old Password:</label>
            <input type="password" name="oldpass" placeholder="...old password" required autofocus>
            <label>New Password:</label>
            <input type="password" name="newpass" placeholder="...new password" required autofocus>
            <button type="submit">Change-Password</button>
        </form>
    </div>
</div>

<%- include("inc/footer") -%>